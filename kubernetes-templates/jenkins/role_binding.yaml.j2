apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: {{ jenkins_updater_account }}-binding
  namespace: {{ staging_namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: {{ jenkins_updater_account }}
subjects:
  - kind: ServiceAccount
    name: {{ jenkins_updater_account }}
    namespace: {{ jenkins_namespace }}
