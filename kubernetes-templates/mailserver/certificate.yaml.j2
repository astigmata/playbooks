---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: mailserver-cert
spec:
  commonName: {{ mail_dns }}
  secretName: mailserver-cert
  dnsNames:
    - {{ mail_dns }}
    - {{ smtp_dns }}
    - {{ imap_dns }}
  issuerRef:
    name: {{ cert_manager_issuer }}
    kind: ClusterIssuer
