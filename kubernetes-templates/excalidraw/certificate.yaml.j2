---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: excalidraw-cert
  namespace: {{ excalidraw_namespace }}
spec:
  commonName: {{ excalidraw_dns }}
  secretName: excalidraw-cert
  dnsNames:
    - {{ excalidraw_dns }}
  issuerRef:
    name: {{ cert_manager_issuer }}
    kind: ClusterIssuer
